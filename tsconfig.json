{
	"compilerOptions": {
		"target": "es2021",
		"module": "commonjs",
		"baseUrl": ".",
		"rootDir": "./src",
		"outDir": "./dist",
		"lib": ["es2021", "dom"],
		"sourceMap": true,
		"declaration": true,
		"strict": false,
		"moduleResolution": "node",
		"typeRoots": ["node_module/@types", "types"],
		"types": ["node", "mocha", "chai", "sinon", "sinon-chai", "multer"],
		"noImplicitAny": false,
		"skipLibCheck": true,
		"strictNullChecks": false, // we need this as false because it has been causing problems with firebase
		"allowSyntheticDefaultImports": true
	},
	"include": ["src/**/*.ts", "src/**/*.md"],
	"exclude": [
		".nyc_output",
		".vscode",
		"coverage",
		"dist",
		"documentation-output",
		"node_modules",
		"src/**/*.spec.ts",
		"src/**/*.e2e.ts",
		"src/**/testing"
	]
}
